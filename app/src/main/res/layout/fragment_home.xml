<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    android:orientation="vertical"
    android:background="#243441">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <ScrollView
            android:id="@+id/home_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <RelativeLayout
                    android:id="@+id/top_curved_panel_lay"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:background="@drawable/ic_top_rect_curved">

                    <FrameLayout
                        android:id="@+id/notification_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="8dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/circular_btn" />

                        <ImageView
                            android:id="@+id/notification_yes_img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_notification_bell" />


                    </FrameLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/test_2" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_below="@id/updated_on_lay"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"

                        android:background="@drawable/ic_rectangle_31"

                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_rect">

                            <ImageView
                                android:id="@+id/loc_ic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="8dp"
                                android:src="@drawable/ic_loc" />

                            <TextView
                                android:id="@+id/km_label_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/rajdhani_regular"
                                android:text="KM"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/km_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/km_label_txt"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/rajdhani_bold"
                                android:text="--"
                                android:textSize="16sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_rect">

                            <ImageView
                                android:id="@+id/lit_ic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/ic_lit" />

                            <TextView
                                android:id="@+id/cal_label_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/rajdhani_regular"
                                android:text="CAL"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/cal_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cal_label_txt"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/rajdhani_bold"
                                android:text="--"
                                android:textSize="16sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_rect">

                            <ImageView
                                android:id="@+id/badge_ic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_badge" />

                            <TextView
                                android:id="@+id/reward_label_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/rajdhani_regular"
                                android:text="REWARD"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/reward_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/reward_label_txt"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/rajdhani_bold"
                                android:text="1/7"
                                android:textSize="16sp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/center_circle"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_below="@id/top_info_lay"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="145dp"
                            android:layout_height="145dp"
                            android:layout_centerInParent="true"

                            android:src="@drawable/center_ellipse"
                            />

                        <RelativeLayout
                            android:id="@+id/circle_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/circle_div"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/coins_by_steps"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="4dp"
                                android:src="@drawable/ic_circle_divider" />

                            <RelativeLayout
                                android:id="@+id/center_circle_coin_info_lay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true">


                                <ImageView
                                    android:id="@+id/coin_center_circle_ic"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_coin" />

                                <TextView
                                    android:id="@+id/circle_coin_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="8dp"
                                    android:layout_toRightOf="@id/coin_center_circle_ic"
                                    android:fontFamily="@font/rajdhani_bold"
                                    android:text="--"
                                    android:textColor="#E4B54B"
                                    android:textSize="16dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/circle_steps_info_lay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/circle_div"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="4dp">

                                <ImageView
                                    android:id="@+id/ic_circle_steps"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_steps" />

                                <TextView
                                    android:id="@+id/circle_steps_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toEndOf="@id/ic_circle_steps"
                                    android:fontFamily="@font/rajdhani_bold"
                                    android:text="--"
                                    android:textColor="#07FCF1"
                                    android:textSize="16dp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/coins_by_steps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/center_circle_coin_info_lay"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/rajdhani_semibold"
                                android:text="Coins by steps" />

                            <TextView
                                android:id="@+id/goal_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/circle_steps_info_lay"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/rajdhani_semibold"
                                android:text="Goal -" />


                        </RelativeLayout>


                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/progress_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            app:cpb_background_progressbar_color="#243441"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progress="70"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="#07FCF1"
                            app:cpb_progressbar_width="5dp"
                            app:cpb_round_border="true" />

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:id="@+id/progress_1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_centerInParent="true"
                            app:cpb_background_progressbar_color="#243441"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progress="70"
                            app:cpb_progress_direction="to_right"
                            app:cpb_progressbar_color="#E4B54B"

                            app:cpb_progressbar_width="5dp"
                            app:cpb_round_border="true" />



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/updated_on_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/center_circle"
                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/ic_updated_on">

                        <TextView
                            android:id="@+id/updated_on_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/rajdhani_regular"
                            android:text="Update on 22:00" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"

                        android:layout_alignParentEnd="true"
                        android:padding="6dp"
                        android:layout_marginRight="16dp"

                        android:layout_below="@id/center_circle"

                        android:background="@drawable/rounded_rect_btn">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="+2/3 Earn more"



                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/rajdhani_bold"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/top_info_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="16dp">

                        <ImageView
                            android:id="@+id/top_steps_ic"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_below="@id/top_user_name_txt"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/ic_steps" />

                        <ImageView
                            android:id="@+id/top_info_div_img"
                            android:layout_width="3dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/top_user_name_txt"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="5dp"
                            android:layout_toEndOf="@id/top_steps_info_txt"
                            android:src="@drawable/ic_top_divider_line" />

                        <ImageView
                            android:id="@+id/top_coin_ic"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_below="@id/top_user_name_txt"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@id/top_info_div_img"
                            android:src="@drawable/ic_coin" />

                        <TextView
                            android:id="@+id/top_user_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/rajdhani_regular"
                            android:text="Hi, John Doe" />

                        <TextView
                            android:id="@+id/top_steps_info_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/top_user_name_txt"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@id/top_steps_ic"
                            android:fontFamily="@font/rajdhani_semibold"
                            android:text="--"
                            android:textColor="#07FCF1" />

                        <TextView

                            android:id="@+id/top_coin_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/top_user_name_txt"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@id/top_coin_ic"
                            android:fontFamily="@font/rajdhani_semibold"
                            android:text="--"
                            android:textColor="#E4B54B" />
                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp" />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/below_level_rect_lay"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/rect_level"
                    android:layout_below="@id/top_curved_panel_lay"
                    android:layout_margin="8dp">
                    <TextView
                        android:id="@+id/level_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEVEL "
                        android:fontFamily="@font/rajdhani_bold"
                        android:textColor="#07FCF1"
                        android:textSize="18sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/level_txt"
                        android:fontFamily="@font/rajdhani_regular"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:text="Reach the Daily Limit for 3 day in a row, to Upgrade\nto Level 2"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp">
                        <FrameLayout
                            android:id="@+id/first_info_level_lay"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/level_bg_ic"/>
                            <ImageView
                                android:id="@+id/first_info_level_ic"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleType="center"
                                android:src="@drawable/ic_safe_point_ic"



                                android:layout_gravity="center"/>
                        </FrameLayout>
                        <ImageView
                            android:id="@+id/first_info_level_line"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_level_line"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/first_info_level_lay"/>

                        <FrameLayout
                            android:id="@+id/second_info_level_lay"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/first_info_level_line"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/level_bg_ic"/>
                            <ImageView
                                android:id="@+id/second_info_level_ic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/steps_warning_ic"


                                android:layout_gravity="center"/>
                        </FrameLayout>
                        <ImageView
                            android:id="@+id/second_info_level_line"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_level_line"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/second_info_level_lay"/>
                        <FrameLayout
                            android:id="@+id/third_info_level_lay"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/second_info_level_line"
                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/level_bg_ic"/>
                            <ImageView
                                android:id="@+id/third_info_level_ic"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/steps_warning_ic"

                                android:layout_gravity="center"/>
                        </FrameLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <Button
                    android:id="@+id/invite_and_earn_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/below_level_rect_lay"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_rect_btn"
                    android:text="Invite and Earn"
                    android:textColor="#000000"/>


            </RelativeLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>